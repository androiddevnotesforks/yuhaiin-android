<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.AlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="dialogCornerRadius">28dp</item>
        <item name="android:colorBackground">?attr/colorSurface</item>
    </style>

    <style name="AppTheme.SwitchPreferenceCompat" parent="@style/Preference.SwitchPreferenceCompat.Material">
        <item name="android:widgetLayout">@layout/view_preference_switch</item>
    </style>

    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="alertDialogTheme">@style/AppTheme.AlertDialogTheme</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">?attr/colorSurfaceVariant</item>
        <item name="android:statusBarColor">?attr/colorSurfaceVariant</item>
        <item name="toolbarStyle">@style/Widget.Material3.Toolbar</item>
        <item name="switchPreferenceCompatStyle">@style/AppTheme.SwitchPreferenceCompat</item>
    </style>
</resources>
